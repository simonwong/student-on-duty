{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "esnext",
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "preserve",
    "allowJs": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    /* Module Resolution Options */
    "baseUrl": ".",
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    /* Experimental Options */
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "./*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "tests"
  ]
}
